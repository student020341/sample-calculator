{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@stores/*": ["./src/stores/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@components/*": ["./src/components/*"]
    },
    "types": ["node"]
  }
}